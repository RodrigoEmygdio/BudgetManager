<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <package name="gestao-gastos" extends="struts-default" namespace="/">
        <default-action-ref name="home"/>
        <action name="home" class="org.exemple.gestaogastos.actions.HomeAction" >
            <result>index.jsp</result>
        </action>
    </package>
    <package name="rendimentos" extends="gestao-gastos" namespace="/rendimentos">
        <action name="*Redimento" class="org.exemple.gestaogastos.actions.rendimentos.RendimentosCrudAction" method="{1}">
            <result name="SUCCESS">rendimentos/{1}.jsp</result>
        </action>
    </package>
</struts>